<form action="/submit" method="POST" enctype="multipart/form-data" class="form-container">
  <!-- Campo ID (opcional, geralmente oculto) -->
  <input type="hidden" name="id" value="{{id}}">

  <!-- Campo Nome -->
  <div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="{{nome}}" placeholder="Digite o nome" required>
  </div>

  <!-- Campo Idade -->
  <div class="form-group">
    <label for="idade">Idade:</label>
    <input type="number" id="idade" name="idade" value="{{idade}}" placeholder="Digite a idade" required>
  </div>

  <!-- Campo Email -->
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{email}}" placeholder="Digite o email" required>
  </div>

  <!-- Campo Senha -->
  <div class="form-group">
    <label for="senha">Senha:</label>
    <input type="password" id="senha" name="senha" placeholder="Digite a senha" required>
  </div>

  <!-- Campo Imagem -->
  <div class="form-group">
    <label for="imagem">Imagem:</label>
    <input type="file" id="imagem" name="imagem" accept="image/*">
  </div>

  <!-- BotÃµes -->
  <div class="form-actions">
    <button type="submit">Enviar</button>
    <button type="reset">Limpar</button>
  </div>
</form>
